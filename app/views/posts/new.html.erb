<div id="page_wrapper">
  <h1>New Post</h1>

  <%= form_for :post, url: posts_path do |f| %>

    <% if @post.errors.any? %>
      <div id="errors">
        <h2>There were <%= pluralize(@post.errors.count, "error") %>. Post could not be saved.</h2>
        <ul>
          <% @post.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>