<%= form_for @post do |f| %>

    <% if @post.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@post.errors.count, "error") %> errors. Post could not be saved.</h2>
        <ul>
          <% @post.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body %>    
    </div>

    <div>
      <%= f.submit %>
    </div>
  <% end %>